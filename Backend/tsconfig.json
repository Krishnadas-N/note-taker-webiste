{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}